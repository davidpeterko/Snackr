@model RequestModel

<!DOCTYPE html>

<html>
<head>
    <title>Request Successful</title>
</head>
<body>
<div>
    <center>
        <h1 class="text-success">Request Failed</h1>
        <p class="text-success">Your request was successful.</p>
        <p class="text-success">
            Snack Request Info:
            <b>Email:</b> @Model.MakeRequestModel.Request._email
            <b>Snack Brand:</b> @Model.MakeRequestModel.Request._snack_brand
            <b>Snack Name:</b> @Model.MakeRequestModel.Request._snack_name
            <b>Request Count:</b> @Model.MakeRequestModel.Request._request_count
        </p>
    </center>
    
    <center>
        <button class="link"><a asp-area="" asp-controller="Inventory" asp-action="Index">Return To Inventory</a></button>
    </center>
</div>
</body>
</html>