@model InventoryViewModel

<center>
<table class="pure-table pure-table-bordered pure-table-striped" data-toggle="table">
    <thead>
        <tr>
            <th>Snack Brand</th>
            <th>Snack Name</th>
            <th>Total Available</th>
            <th>Tako Koin Value</th>
            <th>Action</th>
        </tr>
    </thead>    
    
    <tbody>
       @foreach (var snack in Model.SnackList)
       {
           <tr>
               <td>@snack._snack_brand</td>
               <td>@snack._snack_name</td>
               <td>@snack._snack_count</td>
               @if (User.Identity.IsAuthenticated)
               {
                   <td>Not yet implemented</td>
               }
               <td>Not yet implemented</td>
               @if (User.Identity.IsAuthenticated)
               {
                   <td><button class="link"><a asp-area="" asp-controller="Request" asp-action="Index(@snack._snack_brand, @snack._snack_name)">Request</a></button></td>
               }
               else
               {
                   <td><button class="link"><a asp-area="" asp-controller="Account" asp-action="AccessDenied">Request</a></button></td>
               }
           </tr>
       }
    </tbody>
</table>
</center>
